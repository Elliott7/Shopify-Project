/*  SLIDER   */
.wizard-slider {
    text-align: center;
    overflow: hidden;
  	height: 100%;
}

.wizard-slides {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  	align-items: center;
}

.wizard-slides-center{
    justify-content: center;
}

.wizard-slides::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}
.wizard-slides::-webkit-scrollbar-thumb {
    background: black;
    border-radius: 10px;
}
.wizard-slides::-webkit-scrollbar-track {
    background: transparent;
}
.wizard-slides > div {
    scroll-snap-align: start;
    flex-shrink: 0 ;
/*     width: 330px !important; */
    height: 300px !important;
/*     margin-right: 50px; */
    border-radius: 10px;
    transform-origin: center center;
    transform: scale(1);
    transition: transform 0.5s;
    position: relative;

    display: flex;
    justify-content: center;
    align-items: center;
}


